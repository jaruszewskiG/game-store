{
  "printWidth": 160,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "singleAttributePerLine": true,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "angular",
        "printWidth": 160,
        "htmlWhitespaceSensitivity": "css",
        "bracketSameLine": false,
        "singleAttributePerLine": true
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 160,
        "singleQuote": true
      }
    }
  ]
}
