{
  "printWidth": 80,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "singleAttributePerLine": true,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "angular",
        "printWidth": 120,
        "htmlWhitespaceSensitivity": "ignore",
        "indentInnerHtml": true,
        "bracketSameLine": false
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 120,
        "singleQuote": true
      }
    }
  ]
}
